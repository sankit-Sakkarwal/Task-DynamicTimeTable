@model TimetableInputModel

<!-- Include Bootstrap CSS for styling -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Timetable Input Form</h4>
        </div>
        <div class="card-body">
            <p><strong>Total Hours:</strong> @Model.TotalHours</p>
            <p><strong>Subjects Per Day:</strong> @Model.SubjectsPerDay</p>
            <p><strong>Working Days:</strong> @Model.WorkingDays</p>

            <form asp-action="GenerateTimetable" method="post">
                <!-- Hidden Fields -->
                <input type="hidden" asp-for="TotalHours" />
                <input type="hidden" asp-for="SubjectsPerDay" />
                <input type="hidden" asp-for="WorkingDays" />

                <!-- Subject Inputs -->
                <div class="row g-3">
                    @for (int i = 0; i < Model.Subjects.Count; i++)
                    {
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">@Model.Subjects[i].Name</label>
                                <input class="form-control" name="Subjects[@i].Name" value="@Model.Subjects[i].Name" type="text"  />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Hours</label>
                                <input class="form-control" name="Subjects[@i].Hours" type="number" min="1" required />
                            </div>
                        </div>
                    }
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-success mt-3">Generate Timetable</button>
            </form>
        </div>
    </div>
</div>
